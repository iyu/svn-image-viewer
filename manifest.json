{
  "manifest_version": 2,
  "name": "SVN Image Viewer",
  "version": "1.2.1",

  "default_locale": "ja",
  "description": "svn image viewer",
  "icons": {},

  "page_action": {
    "default_icon": {},
    "default_title": "SVN Image Viewer",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "options_ui": {
    "chrome_style": true,
    "page": "options.html",
    "open_in_tab": false
  },

  "author": "Yuhei Aihara",
  "homepage_url": "https://github.com/iyu/svn-image-viewer",
  "permissions": [
    "tabs",
    "storage",
    "http://*/",
    "https://*/"
  ]
}
